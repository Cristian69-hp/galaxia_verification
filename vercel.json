{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/.well-known/assetlinks.json",
      "dest": "/public/.well-known/assetlinks.json",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/public/$1" 
    }
  ]
}

